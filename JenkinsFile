pipeline {
  agent any
  stages {
    stage('tests and building') {
      steps {
        sh './scripts/ssh_testVM.sh'
      }
    }
    stage('login and push to dockerhub') {
      steps {
        sh './scripts/docker_push.sh'
      }
    }
    stage('deploy with kubernetes') {
      steps {
        sh './scripts/deploy.sh'
      }
    }
  }
}
